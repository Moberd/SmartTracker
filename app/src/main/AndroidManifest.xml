<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smri.smarttracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_st"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_st_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.editor.ChemEditorActivity"></activity>
        <activity android:name=".screens.login.LoginActivity"></activity>
        <activity android:name=".screens.main.scanner.CaptureActivityAnyOrientation"></activity>
        <activity android:name=".screens.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.main.MainActivity">
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

</manifest>